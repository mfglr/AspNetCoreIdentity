@{
    ViewData["Title"] = "Index";
}
@model List<RoleViewModel>


<h1>All Roles</h1>

<a class="btn btn-primary" asp-controller="Roles" asp-action="AddRole" asp-area="Admin">Add Role</a>

<table class="table" >
    <thead>
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-area="admin" asp-controller="Roles" asp-action="UpdateRole" asp-route-id="@role.Id">
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm" asp-area="admin" asp-controller="Roles" asp-action="DeleteRole" asp-route-id="@role.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }

    </tbody>



</table>

