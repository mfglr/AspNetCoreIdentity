
@{
    ViewData["Title"] = "UserList";
}

@model List<UserViewModel>


<h1>UserList</h1>

<table class="table table-striped">

    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-area="admin" asp-controller="Roles" asp-action="AssignRole" asp-route-id="@item.Id">
                        Assign Roles
                    </a>
                </td>
            </tr>
        }

    </tbody>

</table>

