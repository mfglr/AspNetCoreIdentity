@if (Context.User.Identity != null && Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @Context.User.Identity.Name
        </a>
        <ul class="dropdown-menu">

            <li>
                <a class="dropdown-item" asp-controller="Member" asp-action="Index">
                    Profile
                </a>
            </li>

            <li>
                <a class="dropdown-item" asp-controller="Member" asp-action="UpdateUser">
                    Update Your Profile
                </a>
            </li>

            <li>
                <a class="dropdown-item" asp-controller="Member" asp-action="PasswordChange">
                    Change Your Password
                </a>
            </li>

            <li>
                <a class="dropdown-item" asp-controller="Member" asp-action="DisplayClaims">
                    View Your Claims
                </a>
            </li>

            <li>
                <a class="dropdown-item" asp-route-returnUrl="/Home/Index" asp-controller="Member" asp-action="Logout">
                    Logout
                </a>
            </li>
            

        </ul>
    </li>
}
else
{
    <li>
        <a asp-controller="Home" asp-action="SignIn" class="btn btn-outline-primary mx-1">Sign In</a>
    </li>
    <li>
        <a asp-controller="Home" asp-action="SignUp" class="btn btn-outline-primary">Sign Up</a>
    </li>
}   