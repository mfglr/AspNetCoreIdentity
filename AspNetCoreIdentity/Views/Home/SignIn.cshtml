@using AspNetCoreIdentity.ViewModels;

@{
    ViewData["Title"] = "SigIn";
}

@model SignInViewModel

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">

        <h2>Sign In</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" method="post">
            
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email">Email address</label>
                <input asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label" for="RememberMe" asp-for="RememberMe"></label>
            </div>

            <button type="submit" class="btn btn-primary">Sign In</button>

        </form>

    </div>
</div>